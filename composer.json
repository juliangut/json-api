{
  "name": "juliangut/json-api",
  "description": "PSR7 aware json-api integration",
  "keywords": [
    "json-api",
    "annotations"
  ],
  "homepage": "https://github.com/juliangut/json-api",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Julián Gutiérrez",
      "email": "juliangut@gmail.com",
      "homepage": "http://juliangut.com",
      "role": "Developer"
    }
  ],
  "support": {
    "source": "https://github.com/juliangut/json-api",
    "issues": "https://github.com/juliangut/json-api/issues"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "juliangut/mapping": "^1.4.2",
    "laravel-json-api/neomerx-json-api": "^5.0.2",
    "psr/http-message": "^1.0|^2.0",
    "psr/http-server-middleware": "^1.0",
    "symfony/polyfill-php81": "^1.27"
  },
  "require-dev": {
    "ext-dom": "*",
    "ext-json": "*",
    "doctrine/annotations": "^2.0",
    "infection/infection": "~0.25|~0.27",
    "juliangut/easy-coding-standard-config": "^1.15",
    "juliangut/phpstan-config": "^1.2",
    "laminas/laminas-diactoros": "^3.2",
    "overtrue/phplint": "^9.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpmd/phpmd": "^2.15",
    "phpunit/phpunit": "^9.6|^10.4",
    "povils/phpmnd": "^3.2",
    "roave/security-advisories": "dev-master",
    "symfony/console": "^6.0",
    "symfony/yaml": "^6.0"
  },
  "suggest": {
    "symfony/yaml": "In order to load resource mapping from YAML files (>=5.1)",
    "symfony/console": "In order to use console commands (>=5.1)"
  },
  "autoload": {
    "psr-4": {
      "Jgut\\JsonApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Jgut\\JsonApi\\Tests\\": "tests/JsonApi/"
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "infection/extension-installer": true,
      "ocramius/package-versions": true
    }
  }
}
